<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="FileLocker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FileLocker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FileLocker - Secure File Encryption"
    mc:Ignorable="d">

    <Grid Padding="12" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            Background="{ThemeResource SystemAccentColor}"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="0,0,0,1"
            CornerRadius="12"
            Opacity="0.98">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="FileLocker" />
                    <TextBlock
                        FontSize="16"
                        Foreground="White"
                        Opacity="0.9"
                        Text="Secure File Encryption" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        x:Name="CheckUpdatesButton"
                        Padding="12,6"
                        Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="1"
                        Click="CheckUpdates_Click"
                        Content="Check Updates"
                        Foreground="White" />
                    <Button
                        x:Name="AboutButton"
                        Padding="12,6"
                        Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="1"
                        Click="About_Click"
                        Content="About"
                        Foreground="White" />
                    <Button
                        x:Name="ThemeToggleButton"
                        Width="40"
                        Height="32"
                        Margin="8,0,0,0"
                        Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="1"
                        Click="ThemeToggleButton_Click"
                        Content="ðŸŒ™"
                        Foreground="White" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <Border
            Grid.Row="1"
            Margin="20"
            Padding="24"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="1"
            CornerRadius="12">
            <StackPanel Spacing="24">

                <!--  Drag & Drop Area  -->
                <Border
                    x:Name="DropPanel"
                    Margin="0,0,0,8"
                    Padding="32"
                    AllowDrop="True"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource SystemAccentColor}"
                    BorderThickness="2"
                    CornerRadius="10"
                    DragOver="DropPanel_DragOver"
                    Drop="DropPanel_Drop"
                    PointerPressed="DropPanel_PointerPressed">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                        <TextBlock
                            x:Name="DropLabel"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="ðŸ“ Drag files here or click to browse" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            Opacity="0.8"
                            Text="You can add multiple files and folders at once." />
                        <Button
                            Padding="20,10"
                            HorizontalAlignment="Center"
                            Click="BrowseFiles_Click"
                            Content="Browse Files" />
                    </StackPanel>
                </Border>

                <!--  File List and Clear Button  -->
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="Selected Files" />
                    <Border
                        Margin="0,4,0,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <ListView
                            x:Name="FileListBox"
                            MaxHeight="140"
                            Margin="4"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8B7;" />
                                        <TextBlock Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Footer>
                                <TextBlock
                                    Margin="8,4"
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                    Text="Tip: Drag and drop files or click Browse to add more." />
                            </ListView.Footer>
                        </ListView>
                    </Border>
                    <Button
                        x:Name="ClearListButton"
                        Margin="0,6,0,0"
                        Padding="10,5"
                        HorizontalAlignment="Right"
                        Click="ClearListButton_Click"
                        Content="Clear List" />
                </StackPanel>

                <!--  Password Section  -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock FontWeight="Bold" Text="Password" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            Text="At least 6 characters recommended" />
                    </StackPanel>
                    <Grid Margin="0,4,0,0">
                        <PasswordBox
                            x:Name="PasswordBox"
                            Margin="0,0,10,0"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            PasswordRevealMode="Hidden" />
                    </Grid>
                    <ProgressBar
                        x:Name="PasswordStrengthBar"
                        Height="4"
                        Margin="0,5,0,0"
                        Maximum="100" />
                    <TextBlock
                        x:Name="PasswordStrengthText"
                        Margin="0,2,0,0"
                        FontSize="12"
                        Opacity="0.7" />
                </StackPanel>

                <!--  Advanced Options  -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,8"
                        FontWeight="Bold"
                        Text="Advanced Options" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ToggleSwitch
                            x:Name="CompressModeToggle"
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            Header="Compress Files"
                            IsOn="True"
                            OffContent="Disabled"
                            OnContent="Enabled"
                            Toggled="CompressModeToggle_Toggled"
                            ToolTipService.ToolTip="Reduce file size before encryption for faster transfers." />

                        <ToggleSwitch
                            x:Name="ScrambleNamesToggle"
                            Grid.Column="1"
                            Margin="4,0"
                            Header="Scramble Names"
                            IsOn="False"
                            OffContent="Disabled"
                            OnContent="Enabled"
                            Toggled="ScrambleNamesToggle_Toggled"
                            ToolTipService.ToolTip="Obfuscate file names while keeping contents secure." />

                        <ToggleSwitch
                            x:Name="SteganographyToggle"
                            Grid.Column="2"
                            Margin="8,0,0,0"
                            Header="Steganography"
                            IsOn="False"
                            OffContent="Disabled"
                            OnContent="Enabled"
                            Toggled="SteganographyToggle_Toggled"
                            ToolTipService.ToolTip="Hide encrypted data inside an image container." />
                    </Grid>
                </StackPanel>

                <!--  Action Buttons  -->
                <StackPanel
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="24">
                    <Button
                        x:Name="EncryptButton"
                        Padding="20,10"
                        Background="{ThemeResource SystemAccentColor}"
                        Click="EncryptButton_Click"
                        Content="ðŸ”’ Encrypt Files"
                        Foreground="White"
                        ToolTipService.ToolTip="Encrypt all selected files using the password above." />
                    <Button
                        x:Name="DecryptButton"
                        Padding="20,10"
                        Click="DecryptButton_Click"
                        Content="ðŸ”“ Decrypt Files"
                        ToolTipService.ToolTip="Decrypt selected .locked files with your password." />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock
                    x:Name="StatusLabel"
                    Margin="10,5"
                    VerticalAlignment="Center"
                    Text="Ready - Add files to begin" />
            </Grid>
        </Border>
    </Grid>
</Window>

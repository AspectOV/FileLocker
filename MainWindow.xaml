<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="FileLocker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FileLocker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FileLocker"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Compact Header  -->
        <Border
            Grid.Row="0"
            Padding="20,12"
            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
            CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="ðŸ”’ FileLocker" />
                    <Border
                        Padding="8,2"
                        VerticalAlignment="Center"
                        Background="#20000000"
                        CornerRadius="4">
                        <TextBlock
                            FontSize="12"
                            Foreground="White"
                            Opacity="0.85"
                            Text="Secure Encryption" />
                    </Border>
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="6">
                    <Button
                        x:Name="CheckUpdatesButton"
                        Width="32"
                        Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderBrush="#40FFFFFF"
                        BorderThickness="1"
                        Click="CheckUpdates_Click"
                        Content="ðŸ”„"
                        CornerRadius="6"
                        FontSize="14"
                        Foreground="White"
                        ToolTipService.ToolTip="Check for updates"
                        Visibility="Collapsed" />
                    <Button
                        x:Name="AboutButton"
                        Width="32"
                        Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderBrush="#40FFFFFF"
                        BorderThickness="1"
                        Click="About_Click"
                        Content="â„¹"
                        CornerRadius="6"
                        FontSize="16"
                        Foreground="White"
                        ToolTipService.ToolTip="About" />
                    <Button
                        x:Name="ThemeToggleButton"
                        Width="32"
                        Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderBrush="#40FFFFFF"
                        BorderThickness="1"
                        Click="ThemeToggleButton_Click"
                        Content="ðŸŒ™"
                        CornerRadius="6"
                        FontSize="14"
                        Foreground="White"
                        ToolTipService.ToolTip="Toggle theme" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content - Compact Layout  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid MaxWidth="1000" Margin="16,12,16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!--  LEFT COLUMN: File Selection & Operations  -->
                <StackPanel
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    Spacing="12">

                    <!--  Compact Drag & Drop  -->
                    <Border
                        x:Name="DropPanel"
                        Height="140"
                        Padding="16"
                        AllowDrop="True"
                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        DragOver="DropPanel_DragOver"
                        Drop="DropPanel_Drop"
                        PointerPressed="DropPanel_PointerPressed">
                        <Grid>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="8">
                                <TextBlock
                                    x:Name="DropLabel"
                                    HorizontalAlignment="Center"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Text="ðŸ“ Drop files or click to browse" />
                                <Button
                                    Padding="20,6"
                                    HorizontalAlignment="Center"
                                    Click="BrowseFiles_Click"
                                    Content="Browse Files"
                                    CornerRadius="4" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  File List - Compact  -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="0"
                                Padding="12,8"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Selected Files" />
                                <Button
                                    x:Name="ClearListButton"
                                    Grid.Column="1"
                                    Padding="8,4"
                                    Click="ClearListButton_Click"
                                    Content="Clear"
                                    FontSize="12"
                                    ToolTipService.ToolTip="Clear all files" />
                            </Grid>

                            <ListView
                                x:Name="FileListBox"
                                Grid.Row="1"
                                Height="100"
                                Padding="8,4"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                Margin="0,0,8,0"
                                                FontSize="14"
                                                Glyph="&#xE8B7;" />
                                            <TextBlock
                                                Grid.Column="1"
                                                FontSize="13"
                                                Text="{Binding}"
                                                TextTrimming="CharacterEllipsis" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <!--  Action Buttons - Prominent  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="EncryptButton"
                            Grid.Column="0"
                            Height="44"
                            Margin="0,0,4,0"
                            HorizontalAlignment="Stretch"
                            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                            Click="EncryptButton_Click"
                            CornerRadius="8"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Foreground="White"
                            ToolTipService.ToolTip="Encrypt selected files">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ”’" />
                                <TextBlock Text="Encrypt" />
                            </StackPanel>
                        </Button>

                        <Button
                            x:Name="DecryptButton"
                            Grid.Column="1"
                            Height="44"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Stretch"
                            Click="DecryptButton_Click"
                            CornerRadius="8"
                            FontSize="15"
                            FontWeight="SemiBold"
                            ToolTipService.ToolTip="Decrypt selected files">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ”“" />
                                <TextBlock Text="Decrypt" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!--  Hash Helper - Compact Inline  -->
                    <Border
                        x:Name="HashHelperPanel"
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="8"
                        Visibility="Collapsed">
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="13"
                                FontWeight="SemiBold"
                                Text="Quick Hash/Encode" />
                            <TextBox
                                x:Name="HashInputBox"
                                Height="60"
                                AcceptsReturn="True"
                                FontSize="12"
                                PlaceholderText="Enter text..." />
                            <Button
                                x:Name="HashRunButton"
                                Padding="12,6"
                                HorizontalAlignment="Left"
                                Click="HashRunButton_Click"
                                Content="Generate"
                                FontSize="12" />
                            <TextBox
                                x:Name="HashOutputBox"
                                Height="60"
                                AcceptsReturn="True"
                                FontFamily="Consolas"
                                FontSize="11"
                                IsReadOnly="True"
                                PlaceholderText="Output..." />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!--  RIGHT COLUMN: Settings & Configuration  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Spacing="12">

                    <!--  Password Section - Compact  -->
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Password" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="11"
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                    Text="min 8 chars" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <PasswordBox
                                    x:Name="PasswordBox"
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    FontSize="13"
                                    PasswordChanged="PasswordBox_PasswordChanged"
                                    PasswordRevealMode="Peek" />
                                <CheckBox
                                    x:Name="ShowPasswordCheckBox"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Checked="ShowPasswordCheckBox_Checked"
                                    Content="Show"
                                    FontSize="12"
                                    Unchecked="ShowPasswordCheckBox_Unchecked" />
                            </Grid>

                            <ProgressBar
                                x:Name="PasswordStrengthBar"
                                Height="3"
                                Maximum="100" />
                            <TextBlock
                                x:Name="PasswordStrengthText"
                                FontSize="11"
                                Opacity="0.7" />
                        </StackPanel>
                    </Border>

                    <!--  Modes & Algorithms - Compact  -->
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="13"
                                FontWeight="SemiBold"
                                Text="Algorithm" />

                            <ComboBox
                                x:Name="OperationModeCombo"
                                HorizontalAlignment="Stretch"
                                FontSize="13"
                                PlaceholderText="Mode"
                                SelectionChanged="OperationModeCombo_SelectionChanged">
                                <ComboBoxItem Content="Encrypt / Decrypt" IsSelected="True" />
                                <ComboBoxItem Content="Hash / Encode" />
                            </ComboBox>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ComboBox
                                    x:Name="AlgorithmCombo"
                                    Grid.Column="0"
                                    Margin="0,0,4,0"
                                    FontSize="13"
                                    PlaceholderText="Algorithm"
                                    SelectionChanged="AlgorithmCombo_SelectionChanged" />
                                <ComboBox
                                    x:Name="KeySizeCombo"
                                    Grid.Column="1"
                                    Margin="4,0,0,0"
                                    FontSize="13"
                                    PlaceholderText="Bits"
                                    SelectionChanged="KeySizeCombo_SelectionChanged" />
                            </Grid>

                            <Button
                                x:Name="RecommendedModeButton"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Click="RecommendedModeButton_Click"
                                Content="Use Recommended"
                                FontSize="12" />
                            <TextBlock
                                x:Name="AlgorithmHintText"
                                FontSize="11"
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                Text="AES-GCM 256-bit"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <!--  Advanced Options - Collapsed by Default  -->
                    <Expander
                        x:Name="AdvancedOptionsExpander"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Header="Advanced Options"
                        IsExpanded="False">
                        <StackPanel Margin="0,8,0,0" Spacing="12">
                            <ToggleSwitch
                                x:Name="CompressModeToggle"
                                Header="Compress"
                                IsOn="True"
                                OffContent="Off"
                                OnContent="On"
                                Toggled="CompressModeToggle_Toggled" />
                            <ToggleSwitch
                                x:Name="ScrambleNamesToggle"
                                Header="Scramble Names"
                                IsOn="False"
                                OffContent="Off"
                                OnContent="On"
                                Toggled="ScrambleNamesToggle_Toggled" />
                            <ToggleSwitch
                                x:Name="SteganographyToggle"
                                Header="Steganography"
                                IsOn="False"
                                OffContent="Off"
                                OnContent="On"
                                Toggled="SteganographyToggle_Toggled" />
                        </StackPanel>
                    </Expander>

                    <!--  Metadata Editor - Collapsed  -->
                    <Expander
                        x:Name="MetadataExpander"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Header="Metadata"
                        IsExpanded="False">
                        <StackPanel Margin="0,8,0,0" Spacing="8">
                            <TextBox
                                x:Name="MetadataNameBox"
                                FontSize="12"
                                PlaceholderText="Alias" />
                            <TextBox
                                x:Name="MetadataNotesBox"
                                FontSize="12"
                                PlaceholderText="Notes" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    x:Name="MetadataCreatedBox"
                                    Grid.Column="0"
                                    Margin="0,0,4,0"
                                    FontSize="12"
                                    PlaceholderText="Created" />
                                <TextBox
                                    x:Name="MetadataModifiedBox"
                                    Grid.Column="1"
                                    Margin="4,0,0,0"
                                    FontSize="12"
                                    PlaceholderText="Modified" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ToggleSwitch
                                    x:Name="MetadataRandomizeToggle"
                                    Grid.Column="0"
                                    MinWidth="0"
                                    Margin="0,0,8,0"
                                    OffContent="Manual"
                                    OnContent="Random"
                                    Toggled="MetadataRandomizeToggle_Toggled" />
                                <Button
                                    x:Name="MetadataRandomizeButton"
                                    Grid.Column="1"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    Click="MetadataRandomizeButton_Click"
                                    Content="Randomize"
                                    FontSize="12" />
                            </Grid>
                            <TextBlock
                                x:Name="MetadataHelperText"
                                FontSize="11"
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                Text="Optional metadata for encrypted files"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!--  Minimal Status Bar  -->
        <Border
            Grid.Row="2"
            Padding="16,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,1,0,0">
            <TextBlock
                x:Name="StatusLabel"
                FontSize="12"
                Opacity="0.8"
                Text="Ready" />
        </Border>
    </Grid>
</Window>
